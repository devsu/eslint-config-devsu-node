{
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "node": true,
    "es6": true,
    "jasmine": true
  },
  "rules": {

    "array-bracket-spacing": ["error", "never"],
    "arrow-parens": ["error", "always"],
    "arrow-spacing": ["error", { "before": true, "after": true}],
    "brace-style": ["error", "1tbs"],
    "block-spacing": ["error", "always"],
    "camelcase": ["error", {"properties": "always"}],
    "comma-dangle": ["error", "always-multiline"],
    "comma-spacing": ["error", { "before": false, "after": true}],
    "comma-style": ["error", "last"],
    "dot-location": ["error", "property"],
    "dot-notation": ["error"],
    "eol-last": ["error", "unix"],
    "eqeqeq": ["error"],
    "func-call-spacing": "error",
    "indent": ["error", 2, { "SwitchCase": 1}],
    "key-spacing": ["error", { "mode": "strict"}],
    "keyword-spacing": ["error", { "before": true, "after": true, "overrides": {} }],
    "max-depth": [ "error", { "max": 4 } ],
    "max-len": ["error", 100, 2, {"ignoreComments": true, "ignoreUrls": true }],
    "max-statements": ["error", 15, {"ignoreTopLevelFunctions": true}],
    "max-statements-per-line": [ "error" ],
    "new-cap": [ "warn" ],
    "new-parens": "error",
    "no-array-constructor": "error",
    "no-bitwise": ["error"],
    "no-class-assign": "error",
    "no-confusing-arrow": "error",
    "no-const-assign": "error",
    "no-debugger": "error",
    "no-dupe-args": "error",
    "no-dupe-class-members": "error",
    "no-dupe-keys": "error",
    "no-duplicate-imports": "error",
    "no-empty": "error",
    "no-extend-native": "error",
    "no-extra-semi": "error",
    "no-fallthrough": "error",
    "no-func-assign": "error",
    "no-template-curly-in-string": "error",
    "no-global-assign": "error",
    "no-labels": "error",
    "no-mixed-requires": "error",
    "no-multi-spaces": "error",
    "no-multiple-empty-lines": ["error", { "max": "error", "maxEOF": 1, "maxBOF": 0}],
    "no-new": ["error"]
    "no-new-object": ["error"],
    "no-redeclare": "error",
    "no-tabs": "error",
    "no-this-before-super": "error",
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "no-undef": "error",
    "no-underscore-dangle": ["error", {"allow": ["__data", "_collection", "_id"]}],
    "no-unreachable": "error",
    "no-unused-vars": ["error"],
    "no-use-before-define": ["error", "nofunc"],
    "no-useless-constructor": "error",
    "no-var": "error",
    "object-curly-spacing": ["error", "never"],
    "one-var": ["error", { "initialized": "never", "uninitialized": "always" }],
    "operator-linebreak": ["error", "after"],
    "padded-blocks": ["error", "never"],
    "prefer-const": ["error", { "ignoreReadBeforeAssign": true}],
    "prefer-template": "error",
    "quotes": ["error", "single", "avoid-scape"],
    "quotes-props": ["error", "always"],
    "rest-spread-spacing": [ "error", "never" ],
    "semi": ["error", "always"],
    "semi-spacing": "error",
    "space-before-blocks": ["error", "always"],
    "space-before-function-paren": ["error", "never"],
    "spaced-comment": ["error", "always", { "exceptions": ["-"]}],
    "space-in-parens": ["error", "never"],
    "space-infix-ops": "error",
    "strict": ["off", "global"],
    "template-curly-spacing": "error",
    "use-isnan": "error",
    "wrap-iife": ["error", "outside"],

    "block-scoped-var": "warn",
    "complexity": [ "warn", { "max": 3 } ],
    "constructor-super": "error",
    "curly": "error",
    "default-case": "warn",
    "no-alert": "warn",
    "no-cond-assign": [ "error", "always" ],
    "no-control-regex": "error",
    "no-duplicate-case": "error",
    "no-else-return": "error",
    "no-empty-character-class": "error",
    "no-empty-function": "error",
    "no-ex-assign": "error",
    "no-extra-boolean-cast": "error",
    "no-eval": "error",
    "no-floating-decimal": "error",
    "no-invalid-regexp": "error",
    "no-irregular-whitespace": "error",
    "no-new-require": "error",
    "no-new-symbol": "error",
    "no-obj-calls": "error",
    "no-param-reassign": "warn",
    "no-path-concat": "error",
    "no-proto": "error",
    "no-self-compare": "error",
    "no-sequences": "error",
    "no-sparse-arrays": "error",
    "no-unexpected-multiline": "error",
    "no-unmodified-loop-condition": "warn",
    "no-useless-escape": "error",
    "no-useless-concat": "error",
    "no-void": "error",
    "no-with": "error",
    "prefer-spread": "warn",
    "radix": "warn"
  },
  "globals": {
    "COUNTER_HTTP_CLIENT_REQUEST": false,
    "COUNTER_HTTP_CLIENT_RESPONSE": false,
    "COUNTER_HTTP_SERVER_REQUEST": false,
    "COUNTER_HTTP_SERVER_RESPONSE": false,
    "COUNTER_NET_SERVER_CONNECTION": false,
    "COUNTER_NET_SERVER_CONNECTION_CLOSE": false,
    "DTRACE_HTTP_CLIENT_REQUEST": false,
    "DTRACE_HTTP_CLIENT_RESPONSE": false,
    "DTRACE_HTTP_SERVER_REQUEST": false,
    "DTRACE_HTTP_SERVER_RESPONSE": false,
    "DTRACE_NET_SERVER_CONNECTION": false,
    "DTRACE_NET_STREAM_END": false,
    "LTTNG_HTTP_CLIENT_REQUEST": false,
    "LTTNG_HTTP_CLIENT_RESPONSE": false,
    "LTTNG_HTTP_SERVER_REQUEST": false,
    "LTTNG_HTTP_SERVER_RESPONSE": false,
    "LTTNG_NET_SERVER_CONNECTION": false,
    "LTTNG_NET_STREAM_END": false
  }
}
